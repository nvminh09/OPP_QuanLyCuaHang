@page
@model OOP_QuanLyCuaHang.Pages.MH_DanhSachHangHoaModel
@using Entities;

<form method="POST">
    <label for="fname">Từ khóa:</label><br>
    <input type="text" name="tukhoa" value=""><br>
    <input type="submit" value="Tìm hàng hóa">
    <a class="btn btn-primary" href="/MH_ThemHangHoa">Thêm hàng hóa</a>
</form>
<table>
    <tr>
        <th> Mã hàng </th>
        <th> Tên hàng </th>
        <th> Loại hàng</th>
        <th> Hạn dùng</th>
        <th> Công ty sản xuất</th>
        <th> Năm sản xuất</th>
        <th> Giá bán </th>
     </tr>
    @foreach (HangHoa hh in Model.DanhSachHangHoa)
    {
    <tr>
        <td>@hh.MaHang</td>
        <td>@hh.TenHang</td>
        <td>@hh.LoaiHang</td>
        <td>@hh.HanDung</td>
        <td>@hh.CongTy</td>
        <td>@hh.NamSanXuat</td>
        <td>@hh.GiaBan</td>    
        <td>
            <a href="/MH_SuaHangHoa?mahh=@hh.MaHang">Sửa</a>
            <a href="/MH_XoaHangHoa?mahh=@hh.MaHang">Xóa</a>
            @*<a href="/MH_XoaLoaiHang?loaihh=@hh.LoaiHang">Xóa loại hàng</a>*@
        </td>
    </tr>
    }
</table>